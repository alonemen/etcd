[Unit]
Description=Etcd Server
After=network.target
After=network-online.target
Wants=network-online.target

[Service]
Type=notify
EnvironmentFile={{ etcd_work_dir }}/cfg/etcd.conf
ExecStart={{ etcd_work_dir }}/bin/etcd \
        --cert-file={{ etcd_work_dir }}/tls/etcd_server.pem \
        --key-file={{ etcd_work_dir }}/tls/etcd_server-key.pem \
        --peer-cert-file={{ etcd_work_dir }}/tls/etcd_server.pem \
        --peer-key-file={{ etcd_work_dir }}/tls/etcd_server-key.pem \
        --trusted-ca-file={{ etcd_work_dir }}/tls/etcd_ca.pem \
        --peer-trusted-ca-file={{ etcd_work_dir }}/tls/etcd_ca.pem \
        --logger=zap
Restart=on-failure
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target
